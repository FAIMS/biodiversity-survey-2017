final Map WEBVIEW_CONTENTS = new HashMap();

void populateWebViewHtml(String ref, String html) {
  WEBVIEW_CONTENTS.put(ref, html);
}

String getWebViewHtml(String ref) {
  return WEBVIEW_CONTENTS.get(ref);
}

